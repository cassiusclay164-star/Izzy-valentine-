<script>
  // Typing Izzy animation
  const text = "Izzy ğŸ©·";
  let i = 0;
  function typeName() {
    if (i < text.length) {
      document.getElementById("name").innerHTML += text.charAt(i);
      i++;
      setTimeout(typeName, 200);
    }
  }
  typeName();

  function runAway() {
    const btn = document.getElementById("noBtn");
    btn.style.left = Math.random() * (window.innerWidth - 100) + "px";
    btn.style.top = Math.random() * (window.innerHeight - 60) + "px";
  }

  function yesClicked() {
    // Play the music and make it auto-start
    const song = document.getElementById("song");
    song.volume = 0.8;
    song.load();
    song.play();

    document.getElementById("surprise").style.display = "block";

    // Start interactive effects (roses, hearts, pink hearts, confetti)
    startHearts();
    startRoses();
    startConfetti();
    startPinkHearts();
  }

  // Start pink hearts floating
  function startPinkHearts() {
    setInterval(() => drop("ğŸ©·", "pinkHeart"), 350);
  }

  // Start hearts falling
  function startHearts() {
    setInterval(() => drop("ğŸ©·", "heart"), 300);
  }

  // Start roses falling
  function startRoses() {
    setInterval(() => drop("ğŸŒ¸", "rose"), 350);
  }

  // Start confetti falling
  function startConfetti() {
    setInterval(() => drop("ğŸŠ", "confetti"), 250);
    setInterval(() => drop("ğŸ¥³", "confetti"), 400);
  }

  // Drop elements (hearts, roses, confetti) from the top
  function drop(symbol, className) {
    const item = document.createElement("div");
    item.className = className;
    item.innerHTML = symbol;
    item.style.left = Math.random() * window.innerWidth + "px";
    item.style.top = "-40px";
    document.body.appendChild(item);
    setTimeout(() => item.remove(), 5000);
  }

  // Reveal the secret message with animation
  function revealMessage() {
    const message = document.getElementById("secretMessage");
    message.style.display = "block";
    setTimeout(() => {
      message.style.opacity = 1;
    }, 100);
  }
</script>

